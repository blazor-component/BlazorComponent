@namespace BlazorComponent
@typeparam TInput
@inherits ComponentAbstractBase<TInput>

<input disabled="@IsDisabled"
       role="@Type"
       type="@Type"
       value="@Value"
       checked="@IsActive"
       @onclick:preventDefault
       @onblur="HandleOnBlur"
       @onchange="HandleOnChange"
       @onfocus="HandleOnFocus"
       @onkeydown="HandleOnKeyDown"
       @attributes="InputAttrs" />
