@namespace BlazorComponent
@inherits BDomComponentBase

<CascadingValue Value="IsDark" Name="IsDark">
    <IfTransitionElement class="@CssProvider.GetClass()"
                         style="@CssProvider.GetStyle()"
                         ReferenceCaptureAction="e => Ref = e"
                         Value="@If"
                         @onclick="HandleOnClickAsync">
        @ChildContent
    </IfTransitionElement>
</CascadingValue>
