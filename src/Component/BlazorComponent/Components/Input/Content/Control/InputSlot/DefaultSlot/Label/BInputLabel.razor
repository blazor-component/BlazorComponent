@namespace BlazorComponent
@typeparam TValue
@typeparam TInput
@inherits ComponentPartBase<TInput>

@if (HasLabel)
{
    <BLabel @attributes="@GetAttributes(typeof(BLabel))">
        @if (LabelContent != null)
        {
            @LabelContent
        }
        else
        {
            @Label
        }
    </BLabel>
}