@namespace BlazorComponent
@inherits BDomComponentBase

<ul class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref">
    @for (var i = MaxYear; i >= MinYear; i--)
    {
        var year = i;
        var active = Value.ToInt32() == year;

        if (active)
        {
            <li class="@CssProvider.GetClass("year-active")" @onclick="()=>HandleYearClick(year)" @ref="ActiveRef">@year</li>
        }
        else
        {
            <li class="@CssProvider.GetClass("year")" @onclick="()=>HandleYearClick(year)">@year</li>
        }
    }
</ul>
