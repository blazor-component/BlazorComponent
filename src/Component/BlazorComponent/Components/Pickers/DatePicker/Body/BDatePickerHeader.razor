@namespace BlazorComponent
@inherits BDomComponentBase

<div class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref">
    <AbstractComponent Click="@PrevClick" Metadata="AbstractProvider.GetMetadata<BButton>()">
        <AbstractComponent Metadata="AbstractProvider.GetMetadata<BIcon>()">
            @PrevIcon
        </AbstractComponent>
    </AbstractComponent>
    <div class="@CssProvider.GetClass("value")">
        <div class="@CssProvider.GetClass("header")">
            <button type="button" @onclick="DateClick">
                @if (ChildContent != default)
                {
                    @ChildContent
                }
                else
                {
                    @Value
                }
            </button>
        </div>
    </div>
    <AbstractComponent Click="@NextClick" Metadata="AbstractProvider.GetMetadata<BButton>()">
        <AbstractComponent Metadata="AbstractProvider.GetMetadata<BIcon>()">
            @NextIcon
        </AbstractComponent>
    </AbstractComponent>
</div>
