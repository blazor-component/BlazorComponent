@namespace BlazorComponent
@inherits BDomComponentBase
@implements IDatePickerTableBody

<tbody>
    @for (var i = 0; i < 4; i++)
    {
        <tr>
            @for (var j = 0; j < 3; j++)
            {
                var month = i * 3 + j + 1;
                <td>
                    <AbstractComponent IsActive="@IsSelected(month)" Click="@HandleMonthClick(month)" Metadata="AbstractProvider.GetMetadata<BButton>()">
                        @month
                    </AbstractComponent>
                </td>
            }
        </tr>
    }
</tbody>
