@namespace BlazorComponent
@inherits BDomComponentBase

<div class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref">
    <div class="@CssProvider.GetClass("wrap")" style="@CssProvider.GetStyle("wrap")">
        <div class="@CssProvider.GetClass("content")" style="@CssProvider.GetStyle("content")">
            @ChildContent
        </div>
        <div class="@CssProvider.GetClass("action")" style="@CssProvider.GetStyle("action")">
            @if (!string.IsNullOrEmpty(Action))
            {
                <AbstractComponent Metadata="AbstractProvider.GetMetadata<BButton>()">
                    @Action
                </AbstractComponent>
            }
            else
            {
                @ActionContent
            }
        </div>
    </div>
</div>