@namespace BlazorComponent
@inherits BDomComponentBase

<CascadingValue Value="this">
    @if (_groupType == GroupType.ChipGroup)
    {
        <div class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref">
            <div class="@CssProvider.GetClass("prev")"></div>
            <div class="@CssProvider.GetClass("wrapper")">
                <div class="@CssProvider.GetClass("content")">
                    @ChildContent
                </div>
            </div>
            <div class="@CssProvider.GetClass("next")"></div>
        </div>
    }
    else
    {
        <div class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref">
            @ChildContent
        </div>
    }
</CascadingValue>
