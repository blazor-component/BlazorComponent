@namespace BlazorComponent
@typeparam TIcon
@inherits ComponentPartBase<TIcon>

@if (OnClick.HasDelegate)
{
    @RenderPart(typeof(BButtonIconSlot<>))
}
else
{
    <IfTransitionElement
        Value="@ComputedIfElse"
        Tag="@Tag"
        class="@CssProvider.GetClass()"
        style="@CssProvider.GetStyle()"
        ReferenceCaptureAction="_ => Ref = _"
        @attributes="@Attrs">
        @NewChildren
    </IfTransitionElement>
}