@namespace BlazorComponent
@inherits BBootable

<CascadingValue Value="IsDark" Name="IsDark">
    @RenderPart(typeof(BDialogActivator<>))
    <CascadingValue Value="this" IsFixed>
        <CascadingValue Value="FirstBoot" Name="FirstBoot">
            <div class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref" role="dialog">
                @RenderPart(typeof(BDialogContent<>))

                @if (IsBooted)
                {
                    <BOverlay @attributes="GetAttributes(typeof(BOverlay))" @ref="Overlay"></BOverlay>
                }
            </div>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>
