@namespace BlazorComponent
@inherits BDomComponentBase

<div @ref="Ref">
    <SlotComponent Description="SlotProvider.GetSlot<BPopover>()">
        <div class="@CssProvider.GetClass()" id="@Id" style="@CssProvider.GetStyle()">
            <div class="@CssProvider.GetClass("body")" style="@CssProvider.GetStyle("body")">
                @ChildContent
            </div>
        </div>
    </SlotComponent>

    <SlotComponent Description="SlotProvider.GetSlot<BOverlay>()" />
</div>
