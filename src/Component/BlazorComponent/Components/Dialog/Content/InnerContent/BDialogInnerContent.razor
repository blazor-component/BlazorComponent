@namespace BlazorComponent
@typeparam TDialog
@inherits ComponentPartBase<TDialog>

<Transition Name="@Transition">
    <ShowTransitionElement Value="IsActive"
                           class="@CssProvider.GetClass("innerContent")"
                           style="@CssProvider.GetStyle("innerContent")"
                           ReferenceCaptureAction="elementReference => DialogRef = elementReference">
        @ComponentChildContent
    </ShowTransitionElement>
</Transition>
