@namespace BlazorComponent
@typeparam TValue
@inherits BInputAppendSlot<ITextField<TValue>>

@if (AppendOuterContent != null || AppendOuterIcon != null)
{
    <AbstractComponent Type="append" Location="outer" Metadata="AbstractProvider.GetMetadata(typeof(BInputSlot<>))">
        @if (AppendOuterContent != null)
        {
            @AppendOuterContent
        }
        else if (AppendOuterIcon != null)
        {
            <AbstractComponent Type="append-outer-icon" Icon="@AppendOuterIcon" Metadata="AbstractProvider.GetMetadata(typeof(BInputIcon<>))">
            </AbstractComponent>
        }
    </AbstractComponent>
}
