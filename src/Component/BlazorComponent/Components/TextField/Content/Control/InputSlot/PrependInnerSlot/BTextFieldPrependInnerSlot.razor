@namespace BlazorComponent
@typeparam TValue
@typeparam TInput
@inherits ComponentPartBase<TInput>

@if (PrependInnerContent != null || !string.IsNullOrWhiteSpace(PrependInnerIcon))
{
    var childContent = (RenderFragment?)null;

    if (PrependInnerContent != null)
    {
        childContent = PrependInnerContent;
    }
    else if (PrependInnerIcon != null)
    {
        childContent = RenderPart(typeof(BInputIcon<,>), "prepend-inner-icon", PrependInnerIcon, HandleOnPrependInnerClickAsync, arg0Name: "Type", arg1Name: "Icon", arg2Name: "OnClick");
    }

    @RenderPart(typeof(BInputSlot<,>),"prepend","inner",childContent,PrependInnerReferenceCapture, arg0Name:"Type",arg1Name: "Location",arg3Name:"ReferenceCapture")
}
