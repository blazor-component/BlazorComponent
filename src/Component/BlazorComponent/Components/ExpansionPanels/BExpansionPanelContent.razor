@namespace BlazorComponent
@inherits BDomComponentBase

@if (_isBooted || Eager)
{
    <ExpandTransition>
        <ShowTransitionElement Value="_isActive" class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()">
            <div class="@CssProvider.GetClass("wrap")">
                @ChildContent
            </div>
        </ShowTransitionElement>
    </ExpandTransition>
}
