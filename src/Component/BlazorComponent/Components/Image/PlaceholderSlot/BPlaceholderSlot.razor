@namespace BlazorComponent
@typeparam TImage
@inherits ComponentPartBase<TImage>
@if (PlaceholderContent != null)
{
    <Transition Name="@Transition">
        <IfTransitionElement Value="IsLoading"
                             Class="@CssProvider.GetClass("placeholder")">
            @PlaceholderContent
        </IfTransitionElement>
    </Transition>
}
