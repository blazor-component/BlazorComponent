@namespace BlazorComponent
@inherits BDomComponentBase
@implements IImage

<CascadingValue Value="this">
    <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BResponsive))" 
                       Class="@CssProvider.GetClass()" 
                       Style="@CssProvider.GetStyle()" 
                       Width="@Width" 
                       MaxWidth="@MaxWidth" 
                       MinWidth="@MinWidth" 
                       Height="@Height" 
                       MaxHeight="@MaxHeight" 
                       MinHeight="@MinHeight"
                       Dimensions="@Dimensions"
                       ContentClass="@ContentClass">
        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BImageContent<>))"></AbstractComponent>
        <AbstractComponent Metadata="AbstractProvider.GetMetadata(typeof(BPlaceholderSlot<>))"></AbstractComponent>
    </AbstractComponent>
</CascadingValue>