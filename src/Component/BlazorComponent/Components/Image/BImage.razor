@namespace BlazorComponent
@inherits BDomComponentBase

<CascadingValue Value="this">
    <div class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id">
        <div class="@CssProvider.GetClass("resp_sizer")" style="@RespSizerStyle"></div>
        <div class="@CssProvider.GetClass("image")"
             style="@CssProvider.GetStyle("image")">
        </div>
        @if (ChildContent != null)
        {
            <div class="@CssProvider.GetClass("placeholder")">
                @ChildContent
            </div>
        }
        <div class="@CssProvider.GetClass("resp_content")"></div>
    </div>
</CascadingValue>