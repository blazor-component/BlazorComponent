@namespace BlazorComponent
@inherits BGroupItem<BItemGroup>

@if (Show)
{
    <span class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref" @onclick="HandleOnClick">
        <span class="@CssProvider.GetClass("content")">
            @ChildContent
            @if (Close)
            {
                <AbstractComponent Metadata="AbstractProvider.GetMetadata<BIcon>()">
                    @CloseIcon
                </AbstractComponent>
            }
        </span>
    </span>
}
