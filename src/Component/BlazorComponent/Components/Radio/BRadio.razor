@namespace BlazorComponent
@inherits BDomComponentBase
@typeparam TValue

<div class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref" @onclick="HandleClick">
    <div class="@CssProvider.GetClass("radio")" style="@CssProvider.GetStyle("radio")">
        @if (IsActive)
        {
            <AbstractComponent Metadata="AbstractProvider.GetMetadata<BIcon>()">
                @OnIcon
            </AbstractComponent>
        }
        else
        {
            <AbstractComponent Metadata="AbstractProvider.GetMetadata<BIcon>()">
                @OffIcon
            </AbstractComponent>
        }

        <input disabled="@IsDisabled" role="radio" type="radio" checked="@IsActive" value="@Value"
               @onblur="OnBlur" @onchange="OnChange" @onfocus="OnFocus" @onkeydown="OnKeyDown" @onclick="HandleClick" @onclick:stopPropagation/>

        @if (Ripple)
        {
            <div class="@CssProvider.GetClass("ripple")" style="@CssProvider.GetStyle("ripple")"></div>
        }
    </div>
    <AbstractComponent Metadata="AbstractProvider.GetMetadata<BLabel>()">
        @if (LabelContent != default)
        {
            @LabelContent
        }
        else
        {
            @Label
        }
    </AbstractComponent>
</div>