@namespace BlazorComponent
@inherits BDomComponentBase

<div class="@CssProvider.GetClass()"
     style="@CssProvider.GetStyle()"
     id="@Id">
    <div class="@CssProvider.GetClass("control")">
        <div class="@CssProvider.GetClass("slot")" @onclick="Toggle">
            <div class="@CssProvider.GetClass("input")">
                @if (Checked)
                {
                    @CheckedIconContent
                }
                else if (Indeterminate)
                {
                    @IndeterminateIconContent
                }
                else
                {
                    @UncheckIconContent
                }
                <input role="checkbox" type="checkbox" class="" disabled="@Disabled" id="check-@Id" />
                @AnimationContent
            </div>

            @if (ChildContent == null)
            {
                <label class="@CssProvider.GetClass("label")">
                    @Label
                </label>
            }
            else
            {
                @ChildContent
            }
        </div>
    </div>
</div>