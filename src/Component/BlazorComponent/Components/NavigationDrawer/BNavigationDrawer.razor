@namespace BlazorComponent
@inherits BDomComponentBase

<CascadingValue Value="IsDark" Name="IsDark">
    <CascadingValue Value="this" IsFixed>
        <CascadingValue Name="IsInNav" Value="@(Tag=="nav")">
            @if (ShowOverlay)
            {
                <BOverlay @attributes="GetAttributes(typeof(BOverlay))" @ref="Overlay"></BOverlay>
            }
            @*TODO: Directives,Listeners*@
            <Element Tag="@Tag" class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" ReferenceCaptureAction="element=>Ref=element" @attributes="Attributes"
                     @onmouseenter="HandleOnMouseEnterAsync" @onmouseleave="HandleOnMouseLeaveAsync" @onclick="HandleOnClickAsync">
                @if (Src != null || ImgContent != null)
                {
                    @RenderPart(typeof(BNavigationDrawerBackground<>))
                }
                @RenderPart(typeof(BNavigationDrawerPosition<>),"prepend",arg0Name:"ClassName")
                @RenderPart(typeof(BNavigationDrawerContent<>))
                @RenderPart(typeof(BNavigationDrawerPosition<>),"append",arg0Name:"ClassName")
                @RenderPart(typeof(BNavigationDrawerBorder<>))
            </Element>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>


