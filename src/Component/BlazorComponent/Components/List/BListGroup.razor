@namespace BlazorComponent
@inherits BDomComponentBase

<div class="@CssProvider.GetClass()" id="@Id" @ref="Ref">
    <SlotComponent Description="SlotProvider.GetSlot<BListItem>()">
        <SlotComponent Description="SlotProvider.GetSlot<BListItemIcon>(PREPEND)">
            <SlotComponent Description="SlotProvider.GetSlot<BIcon>()">
                @PrependIcon
            </SlotComponent>
        </SlotComponent>
        @Activator
        <SlotComponent Description="SlotProvider.GetSlot<BListItemIcon>(APPEND)">
            <SlotComponent Description="SlotProvider.GetSlot<BIcon>()">
                @AppendIcon
            </SlotComponent>
        </SlotComponent>
    </SlotComponent>
    <div class="@CssProvider.GetClass("items")" style="@CssProvider.GetStyle("items")">
        @ChildContent
    </div>
</div>
