@namespace BlazorComponent
@typeparam TDataTableHeader
@inherits ComponentPartBase<TDataTableHeader>

@if (MultiSort)
{
    <AbstractComponent Metadata="@(AbstractProvider.GetMetadata(typeof(ISelect<,,>), "sort-select-multiple"))"
                       Items="@Items"
                       ItemContent="@ItemContent"
                       SelectionContent="@SelectionContent">
    </AbstractComponent>
}
else
{
    <AbstractComponent Metadata="@(AbstractProvider.GetMetadata(typeof(ISelect<,,>), "sort-select"))"
                       Items="@Items"
                       ItemContent="@ItemContent"
                       SelectionContent="@SelectionContent">
    </AbstractComponent>
}
