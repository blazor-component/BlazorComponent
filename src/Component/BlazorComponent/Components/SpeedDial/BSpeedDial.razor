@namespace BlazorComponent
@inherits BBootable
@typeparam TButton

<BCascadingValue Value="this">
    <div class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" @ref="Ref">
        @ActivatorContent

        <div class="@CssProvider.GetClass("dial-list")" style="@CssProvider.GetStyle("dial-list")">
            @for (var i = 1; i <= Buttons.Count; i++)
            {
                <div style="@CssProvider.GetStyle($"dial-{i}")">
                    @RenderPart(typeof(TButton), attrBuilder => attrBuilder.SetAttributes(Buttons[i].Attributes.ToDictionary(kvp => kvp.Key, kvp => kvp.Value)))
                </div>
            }
        </div>
    </div>
</BCascadingValue>
