@namespace BlazorComponent
@inherits BGroupItem<ItemGroupBase>

<CascadingValue Value="IsDark" Name="IsDark">
    <ShowTransitionElement Tag="@Tag" type="@TypeAttribute"
             class="@CssProvider.GetClass()"
             style="@CssProvider.GetStyle()"
             Value ="Show"
             id="@Id"
             ReferenceCaptureAction="reference=>Ref=reference"
             @onclick="HandleOnClick"
             __internal_stopPropagation_onclick="@StopPropagation"
             @attributes="Attributes">

        @if (HasLoader)
        {
            @RenderPart(typeof(BButtonLoader<>))
        }

        @RenderPart(typeof(BButtonContent<>))
    </ShowTransitionElement>
</CascadingValue>
