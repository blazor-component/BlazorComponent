@namespace BlazorComponent
@inherits BDomComponentBase

<button type="button"
		class="@CssProvider.GetClass(this)"
		style="@CssProvider.GetStyle(this)"
		id="@Id"
		@ref="Ref"
		@onclick="HandleOnClick"
		@onclick:stopPropagation="ClickStopPropagation">

	<div class="@_btnContentClass">
		@ChildContent
	</div>

	@if (Loading)
	{
	 <div class="@_btnLoaderClass">
			@LoadingFragment
	 </div>
	}

</button>